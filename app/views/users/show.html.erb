<div class="page-header">
  <h1>User</h1>
</div>
<%= image_tag @user.photo(:small) %>
 <table width="100%">
          <tbody>
            <tr valign="top">
              <td align="left" style="width:190px;text-align:left;">
                <table  style="width:50%;">
                <tr>
                <th>Name</th>
                <td> <%= @user.username %></td></tr>
                <tr><th>Email</th><td><%= @user.email %></td></tr>
              </table>
        </table> 
<div class="form-actions">
 
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn', :rel => "facebox" %>
 
</div>
<%= stylesheet_link_tag "jquery-ui" %>
<%= stylesheet_link_tag "facebox" %>
<%= javascript_include_tag  "jquery-1.9.1.js", 'jquery-ui', 'jquery.validate.js', 'jquery.validate.min.js' %>
<%= javascript_include_tag "facebox.js" %>
<script>  
 jQuery(document).ready(function() {  
  $('a[rel*=facebox]').facebox();
 });
</script>
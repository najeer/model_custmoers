<div class="page-header">
  <h1>Users</h1>
</div>

<table class="tablesorter" style="width:75%;border:1px solid; align:center;" align="center">

  <thead>
    <div class="abc">
    <tr style="height:50px">
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
    </tr>
    </div>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <% if user.status == 0  %>
    <% if user.role=="User" %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to "Activate", activate_user_path(user), :class => 'btn' %>
      </tr>
      <% end %>
    <% end %>
    <% end %>
  </tbody>
  
  <br>
  
</div>
</table>
<div style="float:right; padding-right:28px;">
<%= paginate @users %>
 </div>

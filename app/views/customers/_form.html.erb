<%= form_for @customer, :html => { :class => 'form-horizontal customer_form' } do |f| %>

  <div class="control-group">
    <%= f.label :Name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :id => 'name_text' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Phone_Number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phoneno, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :Fax_Number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fax, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :legal_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :legal_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :website, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :website_url, :class => 'text_field' %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn' %>
  </div>
<% end %>


<%= stylesheet_link_tag "jquery-ui" %>
<%= javascript_include_tag  "jquery-1.9.1.js", 'jquery-ui', 'jquery.validate.js', 'jquery.validate.min.js' %>
<script>
  
function  validate_function(){
  
$(".customer_form").validate({
  rules: {
    "customer[name]": {
      required: true,
      minlength: 4
    },
    "customer[phoneno]": {
      required: true,
      
    },
    "customer[password]": {
      required: true,
      minlength:6
    },
    "customer[password_confirmation]": {
      required: true,
      equalTo: "#user_password"
    }
  },
  messages: {
   "customer[name]" : {
      required: "Name should not be blank",
      minlength: jQuery.format("At least {0} characters required!")
    },
   "customer[phoneno]" : {
      required: "must be numbers, should not be blank",
      
    },
   "customer[password]" : {
      required: "password should not be blank",
      minlength: jQuery.format("At least {6} characters required!")
    },
   "customer[password_confirmation]" : {
      required: "password should not be blank",
      equalTo: "password should not match"
    }
  }
});

}

$(document).ready(function() {
  $("#name_text").change(function(){
    alert("Hello");
  });
  validate_function();
  
$( "#datepicker" ).datepicker();

 });
</script>